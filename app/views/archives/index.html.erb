<div class="archives">
    <h2>Blog Archive</h2>
      <br>
    <% @articles_by_months.sort.reverse.each do |month, articles| %>
    <h3><%=h month.strftime("%B %Y") %></h3>
      <br>
    <ul id="archive-links">
        <% for article in articles %>
        <li><%=h link_to article.title, article_path(article) %></li>
        <% end %>
    </ul>
    <% end %>
</div>